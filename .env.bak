# Docker Compose Project Configuration
# This project uses different ports to avoid conflicts with other projects

# Project name prefix
COMPOSE_PROJECT_NAME=forum

# Port Configuration - Modified to avoid conflicts
# Database Ports
MYSQL_PORT=3307
MONGODB_PORT=27019

# Message Queue Ports
RABBITMQ_PORT=5673
RABBITMQ_MGMT_PORT=15673

# Service Ports
GATEWAY_PORT=8081
AUTH_SERVICE_PORT=5010
USER_SERVICE_PORT=5011
POST_SERVICE_PORT=5012
HISTORY_SERVICE_PORT=5013
MESSAGE_SERVICE_PORT=5014
FILE_SERVICE_PORT=5015

# Frontend Port
FRONTEND_PORT=3001

# Mailhog Ports
MAILHOG_SMTP_PORT=1026
MAILHOG_WEB_PORT=8026

# Email Configuration (using Mailhog for development)
MAIL_SERVER=mailhog
MAIL_PORT=1026
MAIL_USE_TLS=false
