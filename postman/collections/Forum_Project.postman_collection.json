{
	"info": {
		"_postman_id": "forum-project-collection",
		"name": "Forum Project",
		"description": "API collection for the Forum Project microservices.\n\nAll requests should go through the Gateway at http://localhost:8080",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"description": "Authentication endpoints (Login, Register, etc.)",
			"item": [
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						},
						"description": "Register a new user account"
					},
					"response": []
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						},
						"description": "Login and receive JWT token"
					},
					"response": []
				},
				{
					"name": "Verify Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/auth/verify-token",
							"host": ["{{base_url}}"],
							"path": ["auth", "verify-token"]
						},
						"description": "Verify JWT token validity"
					},
					"response": []
				}
			]
		},
		{
			"name": "User",
			"description": "User management endpoints",
			"item": []
		},
		{
			"name": "Post",
			"description": "Post and Reply endpoints",
			"item": []
		},
		{
			"name": "History",
			"description": "Browsing history endpoints",
			"item": []
		},
		{
			"name": "Message",
			"description": "Contact admin message endpoints",
			"item": [
				{
					"name": "Send Message",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user@example.com\",\n  \"message\": \"Your message here\",\n  \"userId\": \"optional-user-id\",\n  \"images\": [\"https://s3.../image1.jpg\"],\n  \"attachments\": [\"https://s3.../file1.pdf\"]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/messages",
							"host": ["{{base_url}}"],
							"path": ["api", "messages"]
						},
						"description": "Send a contact message (no authentication required)"
					},
					"response": []
				},
				{
					"name": "Get Messages (Inbox)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/messages?page=1&per_page=20&status=pending",
							"host": ["{{base_url}}"],
							"path": ["api", "messages"],
							"query": [
								{
									"key": "page",
									"value": "1",
									"description": "Page number"
								},
								{
									"key": "per_page",
									"value": "20",
									"description": "Items per page"
								},
								{
									"key": "status",
									"value": "pending",
									"description": "Filter by status (optional: pending, read, replied)",
									"disabled": true
								}
							]
						},
						"description": "Get inbox messages (Admin only)"
					},
					"response": []
				}
			]
		},
		{
			"name": "File",
			"description": "File upload endpoints (S3)",
			"item": [
				{
					"name": "Upload Image",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": [],
									"description": "Image file (png, jpg, jpeg, gif, webp, max 10MB)"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/api/files/upload",
							"host": ["{{base_url}}"],
							"path": ["api", "files", "upload"]
						},
						"description": "Upload an image file to S3 and get the public URL"
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "",
			"type": "string"
		}
	]
}
